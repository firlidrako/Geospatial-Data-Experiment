matriks = [
[2, 1, 1, 0, 0, 0, 0, 90],
[1, 3, 0, -1, 1, 0, 0, 120],
[4, 5, 0, 0, 0, 1, 0, 240],
[-5, -8, 0, 1, 0, 0, 1, 0]
]

baris = 4
kolom = 8
#metode reduksi matriks
print("Matriks yang anda masukan :", *matriks, sep = "\n" )
iterasi = 0

#menentukan pivot dan pengecekan keberadaan solusi
while min(matriks[baris-1]) < 0:
    
    
    iterasi += 1
    #pemilihan kolom pivot
    kolom_pivot = matriks[baris-1].index(min(matriks[baris-1]))
    ada_solusi = False
   
    #inisiasi pembanding pivot terpilih
    baris_pivot = 0
    for i in range(baris):
        if matriks[i][kolom_pivot] > 0:
            temp = matriks[i][kolom-1]/matriks[i][kolom_pivot]
            ada_solusi = True
            baris_pivot = i
            break
        
    if ada_solusi:
        #pencarian posisi baris pivot terpilih
        for k in range(baris-1):
            if (matriks[k][kolom_pivot] > 0):
                if (matriks[k][kolom-1]/matriks[k][kolom_pivot] < temp):
                    temp = matriks[k][kolom-1]/matriks[k][kolom_pivot]
                    baris_pivot = k
        pivot = matriks[baris_pivot][kolom_pivot]

        #operasi baris elementer
        for l in range(baris):
            if l != baris_pivot:
                if matriks[l][kolom_pivot] != 0:
                    pengali = matriks[l][kolom_pivot]
                    for m in range(kolom):
                        matriks[l][m] = (pengali*(matriks[baris_pivot][m]))-(pivot*(matriks[l][m]))
        print("\nHasil Reduksi Matriks iterasi ke-" + str(iterasi), *matriks, sep = "\n")
        
        
    else:
        print("\nHasil Reduksi Matriks iterasi ke-" + str(iterasi), *matriks, sep = "\n")
        print("\nMatriks tersebut tidak memiliki solusi")
        break
    
    baris_negatif = False
    for i in range(baris):
        if matriks[i][kolom-1] < 0:
            baris_negatif = True
            for j in range(kolom):
                matriks[i][j] = -matriks[i][j]
        
    if baris_negatif:
        print("\nMatriks yang sudah dinormalkan :", *matriks, sep = "\n" )

print("\nsolusi sudah maksimal, tidak perlu direduksi lagi")
